{
  "manifest_version": 2,

  "name": "Pridify",
  "description": "Apply a pride filter to avatar images on popular websites.",
  "icons": { "128": "icon.png" },
  "version": "1.2",

  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://www.facebook.com/*",
        "https://twitter.com/*",
        "https://*.google.com/*",
        "https://stackoverflow.com/*",
        "*://*.deviantart.com/*",
        "http://www.ravelry.com/*"
      ],
      "js": ["pridify.js"]
    }
  ],
  "permissions": [
    "tabs",
    "https://www.facebook.com/*",
    "https://twitter.com/*",
    "https://*.google.com/*",
    "https://stackoverflow.com/*",
    "*://*.deviantart.com/*",
    "http://www.ravelry.com/*"
  ]
}
